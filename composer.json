{
	"name": "uuf6429/phpstan-codeigniter3",
	"description": "Support for CodeIgniter3 in PHPStan",
	"type": "phpstan-extension",
	"license": "MIT",
	"authors": [
		{
			"name": "Christian Sciberras",
			"email": "christian@sciberras.me"
		}
	],
	"require": {
		"php": "^8.3",
		"phpstan/phpstan": "^2"
	},
	"require-dev": {
		"codeigniter/framework": "^3.1",
		"phpunit/phpunit": "^10",
		"phpstan/phpstan-phpunit": "^2.0"
	},
	"autoload": {
		"psr-4": {
			"CodeIgniter3\\PHPStan\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"CodeIgniter3\\PHPStanTests\\": "tests/"
		}
	},
	"scripts": {
		"test": "phpunit --colors=always",
		"lint": [
			"phpstan analyse"
		],
		"try": "cd vendor/codeigniter/framework && phpstan analyse --configuration ../../../tests/codeigniter-test.neon ../../../tests/fixtures"
	}
}
